<Window x:Class="LB5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LB5" xmlns:sys="http://schemas.microsoft.com/winfx/2009/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <DockPanel LastChildFill="True">
        <Menu Height="35" DockPanel.Dock="Top" Background="LightSteelBlue" FontSize="24">
            <MenuItem Header="Shape" Click="MenuItemShape_Click" />
            <MenuItem Header="File" >
                <MenuItem x:Name="menuItemSave" Header="Save" Command="Save" />
                <MenuItem x:Name="menuItemOpen" Header="Open" Command="Open" />
            </MenuItem>
            <MenuItem x:Name="menuItemHelp" Header="Help" Command="Help" />
            <MenuItem x:Name="menuItemExit" Header="Exit" Command="Close" />
        </Menu>
        <ToolBar DockPanel.Dock="Top" Height="40">
            <Button x:Name="buttonShape" Content="◯" ToolTip="Shape" Click="MenuItemShape_Click"/>
            <Button x:Name="buttonSave" Content="💾" Command="Save"/>
            <Button x:Name="buttonOpen" Content="📂" Command="Open"/>
            <Button x:Name="buttonHelp" Content="ℹ️" Command="Help"/>
            <Button x:Name="buttonExit" Content="❌" Command="Close"/>
        </ToolBar>
        <StatusBar Height="35" Background="LightSeaGreen" DockPanel.Dock="Bottom">
            <TextBlock x:Name="textBlockCursorPosition" Width="300"/>
        </StatusBar>
        <Canvas x:Name="canvas" Background="Beige" MouseDown="canvas_MouseDown" 
                MouseMove="canvas_MouseMove">
            <Ellipse Height="230" Width="200" Canvas.Left="550" Canvas.Top="50" Stroke="Black">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="Aquamarine" Offset="0"/>
                        <GradientStop Color="Gold" Offset="0.7"/>
                        <GradientStop Color="White" Offset="0.3"/>
                        <GradientStop Color="RosyBrown" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Ellipse.MouseDown">
                        <BeginStoryboard>
                            <Storyboard >
                                <DoubleAnimation Storyboard.TargetProperty="Fill.RadiusX" 
                                                To="0.8" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                                <DoubleAnimation Storyboard.TargetProperty="Fill.RadiusY" 
                                                To="0.8" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                                <PointAnimation Storyboard.TargetProperty="Fill.Center" 
                                                To="0.7,0.7" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Canvas>
    </DockPanel>
</Window>